{
  "name": "roommate-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:reset": "drizzle-kit drop && drizzle-kit push",
    "db:studio": "NODE_ENV=development drizzle-kit studio",
    "docker-up:dev": "NODE_ENV=development docker compose -f docker-compose.dev.yml up --build",
    "docker-down:dev": "NODE_ENV=development docker-compose -f docker-compose.dev.yml down",
    "docker-up:prod": "NODE_ENV=production docker compose -f docker-compose.prod.yml up --build",
    "docker-up:prod:detached": "NODE_ENV=production docker compose -f docker-compose.prod.yml up -d --build",
    "docker-down:prod": "NODE_ENV=production docker compose -f docker-compose.prod.yml down",
    "seed:locations": "node -r dotenv/config --loader esbuild-register/loader -r esbuild-register src/database/seeders/locations.seeder.ts",
    "seed:bookmarks": "node -r dotenv/config --loader esbuild-register/loader -r esbuild-register src/database/seeders/bookmarks.seeder.ts",
    "seed:postings": "node -r dotenv/config --loader esbuild-register/loader -r esbuild-register src/database/seeders/postings.seeder.ts",
    "seed:users": "node -r dotenv/config --loader esbuild-register/loader -r esbuild-register src/database/seeders/users.seeder.ts",
    "seed:swipes-matches": "node -r dotenv/config --loader esbuild-register/loader -r esbuild-register src/database/seeders/swipes-matches.seeder.ts"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
